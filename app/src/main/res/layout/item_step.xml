<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_list_single_line_without_avatar_normal_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:background="@color/material_color_white">
    <TextView
        android:id="@+id/textView_step_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/material_list_text_first_position_margin_start"
        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
        android:gravity="left|center_vertical"
        tools:text="Introduction"/>
    <ImageView
        android:id="@+id/imageView_step_play"
        android:layout_width="@dimen/material_list_icon_size"
        android:layout_height="@dimen/material_list_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/material_list_icon_last_position_margin_horizontal"
        android:layout_marginRight="@dimen/material_list_icon_last_position_margin_horizontal"
        android:src="@drawable/ic_play"
        android:tint="@color/colorPrimaryDark"/>
</LinearLayout>