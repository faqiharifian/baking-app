<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardView_defaultMargin"
    android:layout_marginRight="@dimen/cardView_defaultMargin"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/material_card_title_block_padding_horizontal"
        android:layout_marginTop="@dimen/material_card_title_block_large_padding_top"
        android:layout_marginRight="@dimen/material_card_title_block_padding_horizontal"
        android:layout_marginBottom="@dimen/material_card_title_block_large_padding_bottom">
        <com.arifian.bakingapp.views.SquareImageView
            android:id="@+id/imageView_recipeImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/food"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/material_card_actions_icon_action_gutter"
            android:layout_marginRight="@dimen/material_card_actions_icon_action_gutter">
            <TextView
                android:id="@+id/textView_recipeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/material_card_title_block_large_title_text_size"
                tools:text="Brownies"/>
            <TextView
                android:id="@+id/textView_recipeServing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/material_card_title_block_large_subtitle_margin_top"
                android:layout_below="@+id/textView_recipeName"
                android:textSize="@dimen/material_card_title_block_subtitle_text_size"
                tools:text="Servings: 8"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>